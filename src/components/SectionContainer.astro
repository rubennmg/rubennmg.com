---
const { class: className, id} = Astro.props;
---

<section
    id={id}
    class={`section ${className} bg-background rounded-xl w-full mx-auto my-10 customShadow lg:w-[1000px] px-10 py-10`}>
    <slot />
</section>

<style>
    .customShadow {
        box-shadow: 1px 1px 1px 0px rgba(66, 76, 90, 1), 2px 2px 10px 2px rgba(76, 105, 151, 0.55);
    }
</style>