---
interface Props {
    title: string;
    place: string;
    date: string;
    description?: string;
    link: string;
}

const { title, place, description, date, link } = Astro.props;
---

<div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-secondary bg-softblue">
</div>
<time class="mb-1 text-sm font-normal leading-none text-textsoft opacity-70">
    {date}
</time>
<p class="text-2xl font-semibold text-df-text mt-2">
    {title}
</p>
<a class="text-lg font-semibold text-df-text hover:text-softblue underline mt-2" href={link} target="_blank">
    {place}
<a/>
<p class="text-lg font-light text-df-text text-pretty">
    {description}
</p>
